--><project name="tointbackoffice_buildcallbacks">
    	
    <property name="tointbackofficeWebFragmentSrc" value="${ext.tointbackoffice.path}/resources/web-fragment.xml"/>
    	
    <property name="tointbackofficeWebFragmentDestJar" value="${ext.backoffice.path}/web/webroot/WEB-INF/lib/webfragmentExt_tointbackoffice.jar"/>
    	
    <macrodef name="tointbackoffice_after_clean">
        		
        <sequential>
            			
            <tointbackoffice_remove_web_fragment/>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="tointbackoffice_after_build">
        		
        <sequential>
            			
            <tointbackoffice_remove_web_fragment/>
            			
            <tointbackoffice_create_web_fragment/>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="tointbackoffice_remove_web_fragment">
        		
        <sequential>
            			
            <if>
                				
                <available file="${tointbackofficeWebFragmentDestJar}"/>
                				
                <then>
                    					
                    <delete file="${tointbackofficeWebFragmentDestJar}"/>
                    				
                </then>
                			
            </if>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="tointbackoffice_create_web_fragment">
        		
        <sequential>
            			
            <if>
                				
                <available file="${tointbackofficeWebFragmentSrc}"/>
                				
                <then>
                    					
                    <sequential>
                        						
                        <jar destfile="${tointbackofficeWebFragmentDestJar}">
                            							
                            <metainf file="${tointbackofficeWebFragmentSrc}"/>
                            						
                        </jar>
                        					
                    </sequential>
                    				
                </then>
                			
            </if>
            		
        </sequential>
        	
    </macrodef>
    	
    <patternset id="tointbackoffice.localization.pattern">
        		
        <!-- core and hmc  -->
        		
        <include name="**/*locales*_en.properties"/>
        		
        <exclude name="**/hmc/web/webroot/WEB-INF/classes/**/*"/>
        		
        <exclude name="**/unittest/**/*"/>
        		
        <!-- cockpit (ng) -->
        		
        <include name="**/i3-label_en.properties"/>
        		
        <include name="**/labels_en.properties"/>
        		
        <!-- messages -->
        		
        <include name="**/*messages_en.properties"/>
        		
        <include name="**/*messages.properties"/>
        		
        <!-- frontend properties files in WEB-INF/messages folder -->
        		
        <include name="**/WEB-INF/messages/*_en.properties"/>
        		
        <!-- csv and impex -->
        		
        <include name="**/*_en.csv"/>
        		
        <include name="**/*_en.impex"/>
        		
        <include name="**/lang-en.properties"/>
        		
        <!-- email localizations from yacceleratorcore -->
        		
        <include name="resources/**/messages/*_en.properties"/>
        		
        <!-- include validation messages -->
        		
        <include name="resources/**/ValidationMessages.properties"/>
        	
    </patternset>
    	
    <macrodef name="tointbackoffice_before_build">
        		
        <sequential>
            			
            <register_sass_extension extensionname="tointbackoffice"/>
            			
            <register_sass_extension destination="" extensionname="tointbackoffice" resources="resources"/>
            		
        </sequential>
        	
    </macrodef>
    
</project>
